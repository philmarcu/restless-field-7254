<h1>All Current Flights in America Land</h1>
<% @flights.each do |flight| %>
  <div id="flight-<%= flight.id %>">
    <b>Flight #: <%= flight.number %></b><br>
    <p>Airline: <%= flight.airline.name %></p>
    Passengers -
    <% flight.passengers.each do |pass| %>
      <p><%= pass.name %></p>
      <%= link_to "Delete #{pass.name}", "passengers/#{pass.id}", method: :delete %>
    <% end %>
  </div>
<% end %>